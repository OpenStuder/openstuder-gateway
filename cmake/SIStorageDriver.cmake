function(si_add_storage_driver NAME)
    add_library(${NAME} MODULE)
    target_sources(${NAME} PRIVATE ${ARGN})
    target_link_libraries(${NAME} Qt5::Core SIStorage)
    set_target_properties(${NAME} PROPERTIES PREFIX "" SUFFIX ".ssd")
    install(TARGETS ${NAME} LIBRARY DESTINATION "${CMAKE_INSTALL_PREFIX}/${CMAKE_INSTALL_LIBEXECDIR}/openstuder/drivers")
endfunction()
